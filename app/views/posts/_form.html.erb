
<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= asset_path 'contact-bg.jpg' %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>New Post</h1>
          <span class="subheading">Have questions? I have answers.</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>

        <%=form_tag "/posts", method:"post", id: "contactForm" do %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Title</label>
            <%= text_field_tag "post[title]", "", class: "form-control", placeholder: "Title" %>
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Message</label>
            <%= text_area_tag "post[contents]", "", class: "form-control", placeholder: "Contents", rows: "5" %>
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <br>
        <div id="success"></div>
        <div class="form-group">
          <!-- <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button> -->
          <%= submit_tag "submit", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

